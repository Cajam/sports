<html>

<head>
  <title>Sports! by Cassidy</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <script src="/javascripts/angularApp.js"></script>
  <style>
    .glyphicon-thumbs-up {
      cursor: pointer
    }
  </style>
</head>

<body>

  <body ng-app="sportsApp">
    <nav class="navbar navbar-default pull-right" ng-controller="NavController">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <ui-view></ui-view>
        </div>
      </div>
    </div>

    <script type="text/ng-template" id="/home.html">
      <div class="page-header">
        <h1>Sports! by Cassidy</h1>
      </div>


      <div ng-controller="SportsController">
        <form ng-submit="search()" role="form">
          <div class="form-group">
            <div class="radio-inline">
              <label>
                <input type="radio" name="league" ng-model="player1.league" ng-change="player2.league=player1.league" value="nfl">NFL</label>
                <br />
                <input type="hidden" name="league" ng-model="player2.league" value="nfl"></label>
            </div>
            <div class="radio-inline">
              <label>
                <input type="radio" name="league" ng-model="player1.league" ng-change="player2.league=player1.league" value="nba">NBA</label>
                <input type="hidden" name="league" ng-model="player2.league" value="nba"></label>
            </div>
            <div class="radio-inline">
              <label>
                <input type="radio" name="league" ng-model="player1.league" ng-change="player2.league=player1.league" value="nhl">NHL</label>
                <input type="hidden" name="league" ng-model="player2.league" value="nhl"></label>
            </div>
            <br />
            <label for="usr">Player 1 First Name:</label>
            <input type="text" class="form-control" ng-model="player1.firstName" id="oneFirstName">
            <br />
            <label for="usr">Player 1 Last Name:</label>
            <input type="text" class="form-control" ng-model="player1.lastName" id="oneLastName">
            <br />
            <tt>Player 1 Name = {{ player1.firstName | json }} {{ player1.lastName | json }}</tt>
            <br />
            <br />
            <label for="usr">Player 2 First Name:</label>
            <input type="text" class="form-control" ng-model="player2.firstName" id="twoFirstName">
            <br />
            <label for="usr">Player 1 Last Name:</label>
            <input type="text" class="form-control" ng-model="player2.lastName" id="twoLastName">
            <br />
            <tt>Player 2 Name = {{ player2.firstName | json }} {{ player2.lastName | json }}</tt>
            <br />
            <button type="submit" value="Search" class="btn-primary">Search</button>
          </div>
        </form>


        <table class="table table-bordered">
          <tr>
            <th>Player Name</th>
            <th>Points Last Game</th>
            <th>Assists Last Game</th>
          </tr>
          <tr>
            <td ng-repeat="player in player1.players">{{player.name}}</td>
            <td ng-repeat="stats in player1.game_logs | limitTo: 1">{{stats.points}} points</td>
            <td ng-repeat="stats in player1.game_logs | limitTo: 1">{{stats.assists}} assists</td>
          </tr>
          <tr>
            <td ng-repeat="player in player2.players">{{player.name}}</td>
            <td ng-repeat="stats in player2.game_logs | limitTo: 1">{{stats.points}} points</td>
            <td ng-repeat="stats in player2.game_logs | limitTo: 1">{{stats.assists}} assists</td>
          </tr>
        </table>
      </div>
    </script>
  </body>

</html>
